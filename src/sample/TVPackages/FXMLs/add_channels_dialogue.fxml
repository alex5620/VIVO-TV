<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<DialogPane prefHeight="475.0" prefWidth="560.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.TVPackages.AddChannelsDialogueController">
   <content>
      <Pane prefHeight="400.0" prefWidth="600.0">
         <Label layoutX="210.0" layoutY="25.0" text="Adaugă canale">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <TableView fx:id="channelsTable" layoutX="45.0" layoutY="90.0" prefHeight="338.0" prefWidth="450.0">
           <columns>
             <TableColumn fx:id="nameColumn" prefWidth="175.0" text="Denumire" />
             <TableColumn fx:id="typeColumn" prefWidth="65.0" text="Tip" />
               <TableColumn fx:id="frequencyColumn" prefWidth="107.0" text="Frecvenţa" />
               <TableColumn fx:id="channelColumn" prefWidth="100.0" text="Canal" />
           </columns>
         </TableView>
         <Label layoutX="150.0" layoutY="50.0" text="(selectează canalele dorite şi apasă 'OK')">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </Label>
         <Label layoutX="50.0" layoutY="440.0" text="Pentru a selecta mai multe canale apăsaţi CTRL şi selectaţi canalele dorite.">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
      </Pane>
   </content>
</DialogPane>
